<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@style/form_style.css" fx:controller="fr._14.pcd.codingweek15.controllers.RegisterController" styleClass="container">
        <Label text="Inscription" styleClass="h2"/>
        <TextField fx:id="firstName" promptText="Prénom" styleClass="form-control"/>
        <TextField fx:id="lastName" promptText="Nom" styleClass="form-control"/>
        <TextField fx:id="email" promptText="email" styleClass="form-control"/>
        <PasswordField fx:id="password" promptText="Mot de passe" styleClass="form-control"/>
        <PasswordField fx:id="confirmPassword" promptText="Confirmer le mot de passe" styleClass="form-control"/>
        <Button text="S'inscrire" styleClass="btn-primary" onAction="#submit"/>
        <Label text="Déjà inscrit ?" onMouseClicked="#login" styleClass="link"/>
        <Label fx:id="errorMessage" styleClass="error-message"/>
</VBox>


