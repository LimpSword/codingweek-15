<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="720.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" styleClass="rootPane"
            fx:controller="fr.quatorze.pcd.codingweekquinze.controllers.NavBarController" stylesheets="@demo/css/Demo.css">
    <VBox layoutX="300.0" prefWidth="300.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="10.0" left="10.0" top="60.0"/>
        </padding>
        <Label graphicTextGap="15.0" styleClass="header" text="DirectDealing">
            <graphic>
                <StackPane fx:id="logoContainer"/>
            </graphic>
        </Label>
        <HBox fx:id="walletBox" alignment="CENTER">
            <Label text="Votre portefeuille :"/>
            <Label fx:id="wallet" text="0"/>
        </HBox>
        <Button fx:id="notifications" text="Notifications" onAction="#notifications" styleClass="btn-primary"/>
        <MFXScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" fitToHeight="true">
            <VBox.margin>
                <Insets bottom="10.0" left="5.0" top="25.0"/>
            </VBox.margin>
            <padding>
                <Insets right="10.0"/>
            </padding>
            <VBox VBox.vgrow="ALWAYS" spacing="50" alignment="CENTER" fx:id="navbar" maxHeight="1.7976931348623157E308"
                  maxWidth="1.7976931348623157E308"
                  styleClass="navbar">

            </VBox>
        </MFXScrollPane>
    </VBox>
</AnchorPane>